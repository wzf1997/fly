{
  "name": "root",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "prepare": "husky install",
    "release": "standard-version",
    "release:first": "yarn release -- --first-release ",
    "dev": " cross-env MODE=development webpack serve --config  ./scripts/webpack.dev.js ",
    "build": "cross-env MODE=production webpack --config ./scripts/webpack.base.js ",
    "esbuild:dev": "webpack --config ./scripts/webpack.base.js",
    "clean": "rm -rf node_modules",
    "check": "tsc --noEmit",
    "ts": " ts-node --project ./tsconfigs/cmj.json -r tsconfig-paths/register"
  },
  "repository": "https://github.com/wzf1997/fly",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/parser": "^7.18.13",
    "@babel/helper-module-imports": "^7.12.13",
    "@commitlint/config-conventional": "^16.2.1",
    "tsup": "^6.2.3",
    "@commitlint/config-lerna-scopes": "^16.2.2",
    "@types/babel__traverse": "^7.18.0",
    "@babel/generator": "^7.18.13",
    "@types/babel__generator": "^7.6.4",
    "@types/babel__parser": "^7.1.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.4",
    "babel-plugin-import": "^1.13.5",
    "commander": "^9.1.0",
    "commitlint": "^16.2.3",
    "conventional-changelog-cli": "^2.2.2",
    "core-js": "^3.21.1",
    "tsc": "^2.0.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.9",
    "cz-customizable": "^6.3.0",
    "esbuild": "^0.15.2",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fork-ts-checker-webpack-plugin": "^7.2.3",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "mini-css-extract-plugin": "^2.6.0",
    "odiff-bin": "^2.5.0",
    "only-allow": "^1.1.1",
    "esbuild-loader": "^2.19.0",
    "portfinder": "^1.0.28",
    "postcss-loader": "^7.0.0",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.6.1",
    "sass-loader": "^13.0.0",
    "standard-version": "^9.3.2",
    "thread-loader": "^3.0.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "chalk": "^5.0.1"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": ["eslint --cache --ext .ts,.tsx,.js --fix", "prettier --write"],
    "*.@(yml|yaml)": ["prettier --parser yaml --write"],
    "*.md": ["prettier --parser markdown --write"],
    "*.json": ["prettier --parser json --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "version": "1.6.1",
  "main": "src/index.ts",
  "author": "fly",
  "license": "MIT"
}
