{
  "name": "root",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "prepare": "husky install",
    "release": "standard-version",
    "release:first": "yarn release -- --first-release ",
    "dev": "webpack serve --config  ./scripts/webpack.dev.ts --mode development",
    "build": " webpack --config ./scripts/webpack.base.ts --mode production",
    "clean": "rm -rf node_modules",
    "check": "tsc --noEmit",
    "ts": " ts-node --project ./tsconfigs/cmj.json -r tsconfig-paths/register"
  },
  "repository": "https://github.com/wzf1997/fly",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/config-lerna-scopes": "^16.2.2",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "babel-loader": "^8.2.4",
    "commander": "^9.1.0",
    "commitlint": "^16.2.3",
    "conventional-changelog-cli": "^2.2.2",
    "core-js": "^3.21.1",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fork-ts-checker-webpack-plugin": "^7.2.3",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "portfinder": "^1.0.28",
    "prettier": "^2.6.1",
    "standard-version": "^9.3.2",
    "thread-loader": "^3.0.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "cz-customizable": "^6.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": ["eslint --ext .ts,.tsx,.js --fix", "prettier --write"],
    "*.@(yml|yaml)": ["prettier --parser yaml --write"],
    "*.md": ["prettier --parser markdown --write"],
    "*.json": ["prettier --parser json --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "version": "1.2.21",
  "main": "src/index.ts",
  "author": "fly",
  "license": "MIT"
}
